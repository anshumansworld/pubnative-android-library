<?xml version="1.0" encoding="utf-8"?>
<manifest package="net.pubnative.library.demo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- REQUIRED -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- OPTIONAL -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application android:icon="@drawable/ic_launcher">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"/>
        <activity android:name=".NativeAdActivity"/>
        <activity android:name=".InterstitialAdActivity"/>
        <activity android:name=".BannerActivity">
        </activity>
        <activity android:name=".InFeedBannerActivity"/>
    </application>

</manifest>