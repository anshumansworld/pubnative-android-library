<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/demo_activity_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/activity_main_separator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/demo_activity_separator_background"
                android:gravity="center"
                android:text="@string/text_formats"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/activity_main_btn_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/demo_activity_pubnative_purple"
                android:onClick="onSettingsClick"
                android:padding="20dp"
                android:text="@string/action_settings"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onNativeClick"
                android:text="@string/action_native" />

            <Button
                android:id="@+id/buttonInterstitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onInterstitialClick"
                android:text="@string/action_interstitial" />

            <Button
                android:id="@+id/button_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onBannerClick"
                android:text="@string/action_banner" />

            <Button
                android:id="@+id/buttonInFeedBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onInFeedBannerClick"
                android:text="@string/action_feed_banner" />

            <Button
                android:id="@+id/buttonVideoAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onVideoClick"
                android:text="@string/action_video" />

            <Button
                android:id="@+id/buttonFeedVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onFeedVideoClick"
                android:text="@string/action_feed_video" />

            <Button
                android:id="@+id/buttonAssetLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onAssetLayoutClick"
                android:text="@string/action_asset_layout" />

        </LinearLayout>

</ScrollView>
